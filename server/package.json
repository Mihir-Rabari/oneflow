{
  "name": "@oneflow/server",
  "version": "1.0.0",
  "description": "OneFlow Backend API",
  "main": "dist/index.js",
  "prisma": {
    "seed": "dotenv -e ../.env -- tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "prisma:generate": "dotenv -e ../.env -- prisma generate",
    "prisma:push": "dotenv -e ../.env -- prisma db push",
    "prisma:migrate": "dotenv -e ../.env -- prisma migrate dev",
    "prisma:studio": "dotenv -e ../.env -- prisma studio",
    "prisma:seed": "dotenv -e ../.env -- tsx prisma/seed.ts",
    "db:wipe": "dotenv -e ../.env -- tsx scripts/wipe-database.ts",
    "make-admin": "dotenv -e ../.env -- tsx scripts/make-admin.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@oneflow/shared": "*",
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "prom-client": "^15.1.0",
    "redis": "^4.6.12",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "dotenv-cli": "^11.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.9.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
